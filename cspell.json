{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "import": ["./node_modules/@cspell/dict-fr-fr/cspell-ext.json"],
  "languageSettings": [
    {
      "languageId": "*",
      "locale": "*",
      "ignoreRegExpList": ["/#include.*/"],
      "dictionaries": []
    }
  ],
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./project-words.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["project-words", "fr-fr"],
  "ignorePaths": [
    "node_modules",
    "/project-words.txt",
    "package.json",
    "package-lock.json",
    ".vscode/**",
    ".idea/**",
    "**/*.min.js",
    "**/*.min.css",
    "**/*.map",
    "**/*.d.ts",
    "lefthook.yml",
    "cspell.json",
    "schema.graphql"
  ],
  "ignoreRegExpList": ["(^|[^a-z])sl[a-z]*(^|[^a-z])"],
  "useGitignore": true
}
